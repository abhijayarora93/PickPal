<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="200dp"
    
    >

<Button
        android:id="@+id/car_view"
        
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/car"
      
       
        
        
         
        />


    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="50dp"
        android:orientation="vertical"
        android:layout_marginLeft="144dp"
        android:layout_alignTop="@id/car_view"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        >
    
     
	   <Button
	       android:id="@+id/seat_1"
	       android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	       android:text="@string/book_text"
	       android:textSize="10sp" 
	       android:background="@drawable/round_button_check"
	       android:layout_marginBottom="3dp"
	       android:minHeight="35dp"
	        android:minWidth="35dp"
	       
	       />
	   
	    <Button
	       android:id="@+id/dummy"
	       android:layout_weight="0.5"
	       android:layout_height="wrap_content"
	       android:layout_width="wrap_content"
	       android:background="@color/transparent"
	       android:layout_marginTop="3dp"
	       android:layout_marginBottom="3dp"
	       android:minHeight="1dp"
	       android:minWidth="1dp"
	       
	       />	   
	   	
	    <Button
	        android:id="@+id/seat_2"
	     	android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@drawable/round_button_check"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/book_text"
	        android:textSize="10sp" 
	        android:layout_marginTop="3dp"
	        android:minHeight="35dp"
	        android:minWidth="35dp"/>
    
    </LinearLayout>
    
        <LinearLayout
            android:layout_width="50dp"
         android:layout_height="match_parent"
            android:orientation="vertical" 
             android:layout_marginRight="80dp"
        android:layout_alignTop="@id/car_view"
        android:layout_alignRight="@id/car_view"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp">
    
	   <Button
	       android:id="@+id/seat_3"
	       android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	         android:minHeight="35dp"
    		android:minWidth="35dp"
	       android:text="@string/book_text"
	       android:textSize="10sp" 
	       android:background="@drawable/round_button_check"
	       android:layout_marginBottom="3dp"
	       
	       
	       />
	   
	
	 
	
	    <Button
	        android:id="@+id/seat_4"
	     	android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	          android:minHeight="35dp"
    		android:minWidth="35dp"
	        android:background="@drawable/round_button_check"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/book_text"
	        android:textSize="10sp" 
	        android:layout_marginTop="3dp"/>
	    
	    <Button
	        android:id="@+id/seat_5"
	     	android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:minHeight="35dp"
    		android:minWidth="35dp"
	        android:background="@drawable/round_button_check"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/book_text"
	        android:textSize="10sp" 
	        android:layout_marginTop="3dp"/>
    
    </LinearLayout>



</RelativeLayout>